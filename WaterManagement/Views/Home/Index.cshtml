@{ ViewData["Title"] = "Home Page"; }


<div class="row mb-2">
    <div class="col-12 col-sm-6">
        <h1>DashBoard</h1>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">            
            <div class="col-12 col-sm-6 col-md-3">                
                <div class="info-box">
                    
                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-cog"></i></span>
                    <div class="info-box-content">
                        <a href="@Url.Action("Index", "Users")">
                        <span class="info-box-text">Total de Clientes</span>
                        <span class="info-box-number">@ViewBag.TotalNames</span>
                        </a>
                    </div>
                    
                </div>
             
            </div>
           

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-thumbs-up"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Facturas Emitidas</span>
                        <span class="info-box-number">@ViewBag.TotalFaturas</span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-shopping-cart"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Facturas por Pagar</span>
                        <span class="info-box-number">@String.Format("{0:N2}", ViewBag.TotalValor) Mts</span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-users"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Facturas Pagas</span>
                        <span class="info-box-number">@String.Format("{0:N2}", ViewBag.TotalPayed) Mts</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <!-- Monthly Recap Card -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Relatório Mensal</h5>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <p class="text-center">
                                    <strong>Vendas: 1 Jan, 2024 - 30 Dez, 2024</strong>
                                </p>
                                <div class="chart">
                                    <canvas id="salesChart" height="180" style="height: 180px;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
