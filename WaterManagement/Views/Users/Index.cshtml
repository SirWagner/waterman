@model IEnumerable<WaterManagement.Models.User>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
} 


<script src="https://code.jquery.com/jquery-3.6.1.js"></script>
<link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script src="~/dist/js/pages/dashboard2.js"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>




<h1>Lista de Clientes</h1>

<p>
    <a class="btn btn-success" asp-action="Upsert">Adicionar Novo Cliente</a> 
    
</p>


<table id="myTable" class="table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Endereço
            </th>
            <th>
               Nº do Contador
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meter)
                </td>
                <td>
                    @Html.ActionLink("Faturas", "Water", new { Meter = item.Meter }, new { @class = "btn btn-info" })
                </td>
                <td>
                    @Html.ActionLink("Recibos", "Recibos", new { Meter = item.Meter }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
