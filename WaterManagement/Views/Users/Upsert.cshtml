@model WaterManagement.Models.User

@{
    ViewData["Title"] = "Upsert";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="row mb-4">
    <div class="col-12">
        <!-- Step progress bar -->
        <div class="progress" style="height: 30px; border-radius: 20px; overflow: hidden; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); max-width: 400px; margin: 0 auto;">
            <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar"
                 style="width: 50%; font-weight: bold;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                Step 1 of 2: Criar Usuário
            </div>
        </div>
    </div>
</div>

<!-- Overlay background with shadow -->
<div class="row justify-content-center" style="background: rgba(0, 0, 0, 0.05); padding: 20px; border-radius: 15px; box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);">
    <!-- Start of Form -->
    <form asp-action="Upsert" class="col-md-8">
        <!-- First Column -->
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-center mb-4">Informações do Usuário</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label>Nome</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input type="text" asp-for="Nome" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label>Celular</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        </div>
                        <input type="text" asp-for="Celular" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-at"></i></span>
                        </div>
                        <input type="text" asp-for="Email" class="form-control">
                    </div>
                </div>
            </div>

            <!-- Second Column -->
            <div class="col-md-6">
                <h3 class="text-center mb-4">Detalhes do Endereço</h3>

                <div class="form-group">
                    <label>Bairro</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-home"></i></span>
                        </div>
                        <input type="text" asp-for="State" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label>Endereço</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-home"></i></span>
                        </div>
                        <input type="text" asp-for="Address" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label>Nº de Contador</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-hand-holding-water"></i></span>
                        </div>
                        <input type="text" asp-for="Meter" class="form-control" readonly>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submit Buttons Side by Side -->
        <div class="form-group row justify-content-center">
            <div class="col-3">
                <input type="submit" value="Criar Usuário" class="btn btn-primary w-100">
            </div>
            <div class="col-3">
                <a class="btn btn-danger w-100" asp-action="Index">Voltar</a>
            </div>
        </div>


    </form>
    <!-- End of Form -->
</div>











@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/8.11.8/sweetalert2.all.min.js"></script>
    <!-- Optional: include a polyfill for ES6 Promises for IE11 -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/8.11.8/sweetalert2.all.min.js"></script>
    <script src="Https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $('#success').click(function () {
            Swal.fire(
                'Usuário Criado',
                'Confirme o Nr do Contador',
                'success'
            )
        })
    </script>

}
