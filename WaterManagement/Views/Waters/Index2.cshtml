@model IEnumerable<WaterManagement.Models.Clients>

@{
    ViewData["Title"] = "Index";
}

<script src="https://code.jquery.com/jquery-3.6.1.js"></script>
<link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

<script>
$(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>

<div class="row mb-2">
    <div class="col-sm-6">
        <h1>Todas Faturas</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Faturas</li>
        </ol>
    </div>
</div>

<table id="myTable" class="table table-head-fixed">
    <thead>
        <tr>
            <th>
                Nome do Cliente
            </th>
            <th>
                Bairro
            </th>
            <th>
                Nº do Contador
            </th>
            <th>
                Nº da Fatura
            </th>
            <th>
                Contacto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Endereço
            </th>
            <th>
                Meio de Pagamento
            </th>
            <th>
               Nº do Recibo
            </th>
            <th>
                Valor a Pagar
            </th>
            <th>
                Multa
            </th>
            <th>
                Divida Total
            </th>
            <th>
                Valor Pago
            </th>
            <th>
                Data do Pagamento
            </th>
            <th>
                Data de Emissão
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stablished)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Banco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recibo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Multa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Debt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stablished)
            </td>

            <td>
            </td>
        </tr>
        }
    </tbody>
</table>
