@model WaterManagement.Models.Clients

@{
    ViewData["Title"] = "Edit";
}

<h1>Registrar Pagamento  @Html.DisplayFor(model => model.Name)</h1>

<h4>Clients</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="State" />
            <input type="hidden" asp-for="Celular" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Address" />
            <input type="hidden" asp-for="M3" />
            <input type="hidden" asp-for="Stablished" />
            <input type="hidden" asp-for="Created" />


            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" readonly="readonly" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Meter" class="control-label">Nº Contador</label>
                <input asp-for="Meter" readonly="readonly" class="form-control" />
                <span asp-validation-for="Meter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill" class="control-label"></label>
                <input asp-for="Bill" readonly="readonly" class="form-control" />
                <span asp-validation-for="Bill" class="text-danger"></span>
            </div>
                       
            <div class="form-group ">
                <label class="visually-hidden" for="Banco">Banco</label>
                <select asp-for="Banco" class="select">
                    <option style="opacity:0.8" value="">Selecione</option>
                    <option value="BIM">BIM</option>
                    <option value="BCI">BCI</option>
                    <option value="M-PESA">M-PESA</option>
                    <option value="Outro">Outro</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="Recibo" class="control-label"></label>
                <input asp-for="Recibo" class="form-control" />
                <span asp-validation-for="Recibo" class="text-danger">Introduzir nr do Recibo</span>
            </div>
            
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" readonly="readonly" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payed" class="control-label"></label>
                <input asp-for="Payed" class="form-control" />
                <span asp-validation-for="Payed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Multa" class="control-label"></label>
                <input asp-for="Multa" readonly="readonly" class="form-control" />
                <span asp-validation-for="Multa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Debt" class="control-label"></label>
                <input asp-for="Debt" readonly="readonly" class="form-control" />
                <span asp-validation-for="Debt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayDate" class="control-label"></label>
                <input asp-for="PayDate" readonly="readonly" class="form-control" />
                <span asp-validation-for="PayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stablished" class="control-label"></label>
                <input asp-for="Stablished" class="form-control" />
                <span asp-validation-for="Stablished" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Coment" class="control-label"></label>
                <input asp-for="Coment" class="form-control" />
                <span asp-validation-for="Coment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submeter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
